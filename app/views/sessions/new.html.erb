<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <h1 class="text-gray-800 text-center text-3xl font-extrabold mt-12 mb-3 ml-4">Welcome to MessageMe - a complete Chat App</h1>
  <h2 class="text-gray-800 text-center text-xl font-extrabold mb-10">Login to continue</h2>
	<div class="relative py-3 sm:max-w-xl sm:mx-auto">
		<div
			class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
		</div>
		<div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <%= form_with(scope: :session,url: login_path, local: true, data: { turbo: false }) do |f| %>
				<div>
					<h1 class="text-2xl font-semibold">Login form if you had an account or signup <%= link_to "here", signup_path %></h1>
				</div>
				<div class="divide-y divide-gray-200">
					<div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
						<div class="relative">
              <%= f.text_field :username, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600", placeholder: "Enter a username" %>
              <%= f.label :username, class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
						</div>
						<div class="relative">
              <%= f.password_field :password, class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600", placeholder: "Enter your password" %>
              <%= f.label :password, class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
						</div>
						<div class="relative">
              <%= f.submit "Login" ,class: "bg-slate-500 mt-4 mb-0 text-white rounded-md px-4 py-1" %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
